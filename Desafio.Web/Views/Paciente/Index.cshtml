@model IEnumerable<Desafio.Domain.Entities.Paciente>
@{
    ViewData["Title"] = "Cadastro de Pacientes";
}

<div class="row mt-3">
    <div class="mb-3">
        <h4>@ViewData["Title"]</h4>
    </div>

    <div class="mb-3">
        <a asp-controller="Paciente" asp-action="Create" class="btn btn-primary mx-0">Novo Paciente</a>
    </div>

    <div>
        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data de Nascimento</th>
                    <th>Sexo</th>
                    <th>Telefone</th>
                    <th>E-mail</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @{
                    if (Model.Count() <= 0)
                    {
                        <tr>
                            <td colspan="7">Nenhum Paciente cadastrado.</td>
                        </tr>
                    }
                }
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Nome</td>
                        <td>@obj.CPF</td>
                        <td>@Convert.ToDateTime(@obj.DataNascimento).ToString("dd/MM/yyyy")</td>
                        <td>@obj.Sexo</td>
                        <td>@obj.Telefone</td>
                        <td>@obj.Email</td>
                        <td>
                            <div class="btn-group">
                                <a asp-controller="Paciente" 
                                    asp-action="Details" 
                                    asp-route-id="@obj.Id"
                                    title="Detalhes"
                                    class="btn btn-info mx-0">
                                    <i class="bi bi-zoom-in" alt="Detalhes"></i>
                                </a>
                                <a asp-controller="Paciente" 
                                    asp-action="Update" 
                                    asp-route-id="@obj.Id"
                                    title="Alterar"
                                    class="btn btn-primary mx-0">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Paciente" 
                                    asp-action="Delete" 
                                    asp-route-id="@obj.Id"
                                    title="Apagar"
                                    class="btn btn-danger mx-0">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
