@model IEnumerable<Desafio.Domain.Entities.Exame>
@{
    ViewData["Title"] = "Cadastro de Exames";
}

<div class="row mt-3">
    <div class="mb-3">
        <h4>@ViewData["Title"]</h4>
    </div>

    <div class="mb-3">
        <a asp-controller="Exame" asp-action="Create" class="btn btn-primary mx-0">Novo Exame</a>
    </div>

    <div>
        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Tipo de Exame</th>
                    <th>Observações</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @{
                    if (Model.Count() <= 0)
                    {
                        <tr>
                            <td colspan="4">Nenhum Exame cadastrado.</td>
                        </tr>
                    }
                }
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Nome</td>
                        <td>@obj.TipoExame.Nome</td>
                        <td>@obj.Observacoes</td>
                        <td>
                            <div class="btn-group">
                                <a asp-controller="Exame" 
                                    asp-action="Details" 
                                    asp-route-id="@obj.Id"
                                    title="Detalhes"
                                    class="btn btn-info mx-0">
                                    <i class="bi bi-zoom-in" alt="Detalhes"></i>
                                </a>
                                <a asp-controller="Exame" 
                                    asp-action="Update" 
                                    asp-route-id="@obj.Id"
                                    title="Alterar"
                                    class="btn btn-primary mx-0">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            <a asp-controller="Exame"
                           asp-action="Delete" 
                                    asp-route-id="@obj.Id"
                                    title="Apagar"
                                    class="btn btn-danger mx-0">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
